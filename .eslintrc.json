{
	"plugins": [
		"prettier",
		"react"
	],
	"extends": [
		"prettier",
		"prettier/react"
	],
	"rules": {
		"prettier/prettier": ["error", {
			"singleQuote": true,
			"useTabs": true,
			"trailingComma": "es5",
			"semi": false
		}]
	},
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
	"env": {
		"es6": true,
		"node": true,
		"browser": true
	}
}
